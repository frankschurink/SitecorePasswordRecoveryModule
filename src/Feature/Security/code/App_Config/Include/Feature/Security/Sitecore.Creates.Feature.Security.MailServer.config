<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:search="http://www.sitecore.net/xmlconfig/search/" xmlns:role="http://www.sitecore.net/xmlconfig/role/" xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <sitecore role:require="Standalone or ContentManagement">
    <settings>
      <!--add your own mail server configuration-->
      <setting name="MailServer">
        <patch:attribute name="value"></patch:attribute>
      </setting>
      <setting name="MailServerUserName">
        <patch:attribute name="value"></patch:attribute>
      </setting>
      <setting name="MailServerPassword">
        <patch:attribute name="value"></patch:attribute>
      </setting>
      <setting name="MailServerPort">
        <patch:attribute name="value"></patch:attribute>
      </setting>
    </settings>
  </sitecore>
</configuration>